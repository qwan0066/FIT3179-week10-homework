{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "CO2 Emissions & Population",
  "width": 800,
  "height": 600,
  "description": "A scatterplot showing horsepower and miles per gallons for various cars.",
  "data": {
      "url": "https://raw.githubusercontent.com/qwan0066/FIT3179-week10-homework/main/data/all_csv_sorted.csv"
  },
  "params": [
      {
          "name": "Population_Above",
          "value": "0",
          "bind": {
              "input": "range",
              "min": 0,
              "max": 100000000,
              "step": 1000000,
              "name": "Minimum Population"
          }
      }
  ],
  "transform": [
      {"filter": "datum.Population > 0"},
      {"filter": "datum.Internet_users > 0"},
      {"filter": "datum.Population > Population_Above"}
  ],
  "mark": "point",
  "encoding": {
      "x": {
          "field": "Internet_users",
          "type": "quantitative",
          "axis": {"tickCount": 7},
          "scale": {
              "type": "log",
              "domain": [
                  1000,
                  20000000000
              ]
          }
      },
      "y": {
          "field": "Population",
          "type": "quantitative",
          "axis": {"tickCount": 7},
          "scale": {
              "type": "log",
              "domain": [
                  1000,
                  10000000000
              ]
          }
      },
      "tooltip": [
          {
              "field": "Country",
              "type": "nominal"
          },
          {
              "field": "Internet_users",
              "type": "quantitative"
          },
          {
              "field": "Population",
              "type": "quantitative"
          }
      ]
  }
}